{
  "manifest_version": 3,
  "name": "SEO Analyser",
  "version": "1.0",
  "description": "Analyse SEO elements of the current page",
  "permissions": ["activeTab", "tabs", "webRequest", "webRequestBlocking", "http://*/", "https://*/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {}
  },
  "content_scripts": [
    {
      "matches": ["*://*.vietnix.vn/*"],
      "js": ["dist/bundle.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/logo.png",
        "css/styles.css",
        "css/base.css",
        "css/tabs.css",
        "css/overview.css",
        "css/tables.css",
        "css/footer.css",
        "css/image-view.css",
        "css/utilities.css",
        "css/button.css",
        "css/highlight.css"
      ],
      "matches": ["*://*.vietnix.vn/*"]
    }
  ]
}
